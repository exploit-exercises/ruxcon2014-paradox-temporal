
.row-fluid
  .span3
  .span6
    .hero-unit
      %h1 Coming Soon...
      %p If you wish to be updated, please fill in the below form
  .span3

.row-fluid
  .span3
  .span6
    %form.well{ :method => "POST", :action => "/" }
      %fieldset
        %legend Keep updated
        .control-groups
          %label.control-label{ :for => "username" } Username
          .controls
            %input{ :id => "username", :type => "text", :name => "user[username]" }

        .control-groups
          %label.control-label{ :for => "email" } Email
          .controls
            %input{ :id => "email", :type => "text", :name => "user[email]" }

        .control-groups
          %label.control-label{ :for => "emailAgain" } Email (again)
          .controls
            %input{ :id => "emailAgain", :type => "text", :name => "user[emailAgain]" }

        .control-groups
          %label.control-label{ :for => "password" } Password
          .controls
            %input{ :id => "password", :type => "password", :name => "user[password]" }

        .control-groups
          %label.control-label{ :for => "passwordAgain" } Password (again)
          .controls
            %input{ :id => "passwordAgain", :type => "password", :name => "user[passwordAgain]" }

        .form-actions
          %button.btn.btn-primary{ :type => "submit" } Submit
          


